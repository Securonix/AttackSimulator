<%@page contentType="text/html" pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
        <title>FeedGenerator UI Signin Page</title>
        <script type="text/javascript" src="./scripts/jquery.min.js"></script>
        <script type="text/javascript" src="./scripts/md5.js"></script>
        <script type="text/javascript" src="./scripts/main.js"></script>
    </head>
    <body onload="afterLoadCallThis()">
      <%
        String userName = null;
        Cookie[] cookies = request.getCookies();
        if(cookies !=null){
            for(Cookie cookie : cookies){
                if(cookie.getName().equals("user"))
                    response.sendRedirect("InputRequestParameters.jsp");
            }
        }
      %>
      <div style="width: 960px; margin: 0 auto; float: left;">
        <div id="login" style="float: left; clear: both;">
          <h1>Please sign in</h1>
          <ul style="list-style: none; width: 600px; float: left;">
            <li style="width: 150px; float: left;">Username: </li><li style="width: 350px; float: left; clear: right;"><input id="username" type="text"/></li>
            <li style="width: 150px; float: left;">Password: </li><li style="width: 350px; float: left; clear: right;"><input id="password" type="password"/></li>
            <li style="clear: both;"><button onclick="onButtonClick()">Submit</button>
            <li style="clear: both;">Don't have a username? <span id="register" style="cursor: pointer; color: blue;">Register</span></li>
          </ul>
        </div>
        <div id="register-form" style="float: left; clear: both;">
          <h1>Please register for an account </h1>
          <ul style="list-style: none; width: 600px; float: left;">
            <li style="width: 150px; float: left;">Name: </li><li style="width: 350px; float: left; clear: right;"><input type="text" id="register-name"/></li>
            <li style="width: 150px; float: left;">Company </li><li style="width: 350px; float: left; clear: right"><input type="text" id="register-company"/></li>
            <li style="width: 150px; float: left;">Work Email: </li><li style="width: 350px; float: left; clear: right"><input type="text" id="register-email"/></li>
            <li style="width: 150px; float: left;">Confirm Email: </li><li style="width: 350px; float: left; clear: right;"><input type="text" id="register-confirm-email"/></li>
            <li style="width: 150px; float: left;">Username: </li><li style="width: 350px; float: left; clear: right;"><input type="text" id="register-username"/></li>
            <li style="width: 150px; float: left;">Desired Password: </li><li style="width: 350px; float: left; clear: right;"><input type="password" id="register-password"/></li>
            <li style="width: 150px; float: left;">Confirm Password: </li><li style="width: 350px; float: left; clear: right;"><input type="password" id="register-confirm-password"/></li>
            <li style="float: left; clear: both;"><button id="register-button">Register</button></li>
            <li style="clear: both;">Already have an account? <span id="signin" style="cursor: pointer; color: blue;">Sign in</span></li>
          </ul>
        </div>
        <div id="message" style="float: left; clear: both;"></div>
      </div>
    </body>
</html>
